(include "./widgets/bar.yuck")
(include "./widgets/powermenu.yuck")

(
  defwindow bar
  :monitor 0
  :geometry
  (
    geometry
    :width "100%"
    :height "1%"
    :anchor "bottom center"
  )

  ; Wayland
  :stacking "fg"
  :exclusive true
  :focusable false
  :namespace "bar"

  (bar)
)

(
  defwindow calendar
  :monitor 0
  :geometry
  (
    geometry
    :x "0"
    :y "0"
    :width "270px"
    :height "60px"
    :anchor "bottom center"
  )

  (cal)
)
