# Links to your timezone
ln -sf /usr/share/zoneinfo/Brazil/East /etc/localtime

# generate /etc/adjtime
hwclock --systohc

# Set locale to br
echo 'pt_BR.UTF-8 UTF-8' >> /etc/locale.gen
locale-gen
echo 'LANG=pt_BR.UTF-8' >> /etc/locale.conf

# Set console keyboard to br
echo 'KEYMAP=br-abnt2' >> /etc/vconsole.conf

# Host name
echo 'arch' >> /etc/hostname

# Root user
echo 'Root'
passwd

# Installs neovim
pacman -Sy --noconfirm --needed neovim

# Open multilib
nvim /etc/pacman.conf

# Install all needed packages
pacman -Sy --noconfirm --needed doas grub efibootmgr dosfstools mtools p7zip gc\
	os-prober nvidia xorg xorg-xinit kitty feh picom fzf mpv btop tree autoconf\
	networkmanager stylua lf fish libreoffice-still bat pulseaudio exa zathura m4\
	rustup zathura-pdf-mupdf discord dnsmasq qemu virt-manager gimp openssh xclip\
	gnu-free-fonts noto-fonts ttf-dejavu ttf-droid ttf-firacode-nerd fd unzip\
	ttf-lato ttf-nerd-fonts-symbols-common ttf-liberation ueberzug renameutils\
	ffmpegthumbnailer alsa-utils pavucontrol pulseaudio-alsa exfatprogs tokei gcc\
	transmission-gtk lxappearance-gtk3 docker docker-compose yt-dlp redshift make\
	starship ripgrep nvidia-utils cmatrix bluez bluez-utils udisks2 lazygit bison\
	automake debugedit fakeroot flex guile libisl libmpc patch pkgconf texinfo\
	which cups maim

# Only the group wheel has superuser permission
echo 'permit keepenv persist :wheel' >> /etc/doas.conf

# Blacklists nouveau in case nvidia-utils doesn't
echo 'blacklist nouveau' >> /etc/modprobe.d/blacklist.conf

# Change shell to fish
chsh -s /bin/fish

# Set timeout = 0 and enable os-prober
nvim /etc/default/grub

# Mount boot/EFI partition
mount --mkdir /dev/sda1 /boot/EFI

# Print partition table
lsblk -f

# Install grub with uefi
grub-install --target=x86_64-efi --bootloader-id=grub_uefi --recheck
grub-mkconfig -o /boot/grub/grub.cfg

# Enable internet connection
systemctl enable NetworkManager

# Enable virtual machine
systemctl enable libvirtd

# Enable printing
systemctl enable cups

# Enable docker
systemctl enable docker

# Enable bluetooth
systemctl enable bluetooth

# Work user
useradd -m -G wheel,audio,video,optical,storage,libvirt -s /bin/fish work
echo 'Work'
passwd work

# Fun user
useradd -m -G wheel,audio,video,optical,storage,libvirt -s /bin/fish fun
echo 'Fun'
passwd fun

# Ensure blacklist works
mkinitcpio -P

echo 'Run: reboot'
