loadkeys br-abnt2
timedatectl set-ntp true

# Format
# fdisk /dev/sda #g n t +550M 1 +4G 19 +resto w
# fdisk /dev/sdb # g n +resto w

# Partition
# mkfs.ext4 /dev/sda3
# mount /dev/sda3 /mnt

# Boot
# mkfs.fat -F32 /dev/sda1
# mkdir -p /mnt/boot/EFI
# mount /dev/sda1 /mnt/boot/EFI

# Swap
# mkswap /dev/sda2
# swapon /dev/sda2

# Home
# mkfs.ext4 /dev/sdb1
# mkdir -p /mnt/home
# mount /dev/sdb1 /mnt/home

# Format in VM
fdisk /dev/vda

# Partitions in VM
# Boot
mkfs.fat -F32 /dev/vda1
mkdir -p /mnt/boot/EFI
mount /dev/vda1 /mnt/boot/EFI
# Swap
mkswap /dev/vda2
swapon /dev/vda2
# File system
mkfs.ext4 /dev/vda3
mount /dev/vda3 /mnt

lsblk -f
read
pacstrap /mnt base linux linux-firmware
genfstab -U /mnt >> /mnt/etc/fstab
# arch-chroot /mnt
ln -sf /usr/share/zoneinfo/Brazil/East /etc/localtime
hwclock --systohc
echo 'pt_BR.UTF-8 UTF-8' >> /etc/locale.gen
locale-gen
echo 'LANG=pt_BR.UTF-8' >> /etc/locale.conf
echo 'KEYMAP=br-abnt2' >> /etc/vconsole.conf
echo 'arch' >> /etc/hostname
passwd
pacman -S --noconfirm --needed doas neovim grub efibootmgr dosfstools os-prober
pacman -S --noconfirm --needed nvidia xorg xorg-xinit kitty feh picom rofi fzf
pacman -S --noconfirm --needed base-devel mpv btop cmatrix mtools networkmanager
pacman -S --noconfirm --needed lf fish neofetch bat pulseaudio
pacman -Rsn --noconfirm sudo
echo 'permit :wheel' >> /etc/doas.conf
chsh -s /bin/fish
nvim /etc/default/grub
grub-install --target=x86_64-efi --bootloader-id=grub_uefi --recheck
grub-mkconfig -o /boot/grub/grub.cfg
systemctl enable NetworkManager
useradd -m fresh
usermod -G wheel,audio,video,optical,storage -a fresh
passwd fresh
seradd -m sangrito
usermod -G wheel,audio,video,optical,storage -a sangrito
passwd sangrito
umount -R /mnt
reboot
