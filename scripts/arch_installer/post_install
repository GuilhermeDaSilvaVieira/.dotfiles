# Install yay
git clone https://aur.archlinux.org/yay-bin.git
cd yay-bin
makepkg -si
cd ..
rm yay-bin -rf

# Install additional packages we don't have on pacman
yay -S --noconfirm --needed awesome-git nvim-packer-git librewolf-bin\
 ttf-ms-fonts tradingview-bin

# Make startx works with awesome
cp /etc/X11/xinit/xinitrc ~/.xinitrc
nvim ~/.xinitrc

# Default zathura with pdf reader, not GIMP
xdg-mime default org.pwmt.zathura.desktop application/pdf

# Install oh-my-fish
curl https://raw.githubusercontent.com/oh-my-fish/oh-my-fish/master/bin/install > install
fish install --path=~/.local/share/omf --config=~/.config/omf

echo 'Run: yay -Rsn (yay -Qtdq)'
