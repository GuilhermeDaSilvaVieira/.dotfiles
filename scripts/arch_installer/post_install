# Install yay
git clone https://aur.archlinux.org/paru.git
cd paru
LC_ALL=C makepkg -si --log
cd ..
rm paru -rf

doas nvim /etc/paru.conf

# Install additional packages we don't have on pacman
paru -S --noconfirm --needed awesome-git nvim-packer-git librewolf-bin\
 ttf-ms-fonts tradingview jmtpfs epson-inkjet-printer-escpr

# Make startx works with awesome
cp /etc/X11/xinit/xinitrc ~/.xinitrc
nvim ~/.xinitrc

# Default zathura with pdf reader, not GIMP
xdg-mime default org.pwmt.zathura.desktop application/pdf

echo 'Run: paru -Rsn (paru -Qtdq)'
