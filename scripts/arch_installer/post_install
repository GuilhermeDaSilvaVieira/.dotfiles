# Change rustup to default
rustup default stable

# Install paru
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si
cd ..
rm paru -rf

# Use doas instead of sudo
doas nvim /etc/paru.conf

# Install AUR packages
paru -S --noconfirm --needed awesome-git
paru -Rsn (paru -Qtdq) 
paru -S --noconfirm --needed nvim-packer-git
paru -Rsn (paru -Qtdq) 
paru -S --noconfirm --needed librewolf-bin
paru -Rsn (paru -Qtdq) 
paru -S --noconfirm --needed ttf-ms-fonts
paru -Rsn (paru -Qtdq) 
paru -S --noconfirm --needed tradingview
paru -Rsn (paru -Qtdq) 
paru -S --noconfirm --needed jmtpfs
paru -Rsn (paru -Qtdq) 
paru -S --noconfirm --needed epson-inkjet-printer-escpr
paru -Rsn (paru -Qtdq) 
paru -S --noconfirm --needed mangal-bin
paru -Rsn (paru -Qtdq) 

# Make startx works with awesome
cp /etc/X11/xinit/xinitrc ~/.xinitrc
nvim ~/.xinitrc

# Default zathura with pdf reader, not GIMP
xdg-mime default org.pwmt.zathura.desktop application/pdf

# Set X11 keyboard
localectl set-x11-keymap br
