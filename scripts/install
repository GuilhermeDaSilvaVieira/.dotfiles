# Remove any existing config folders that can have a conflict
cd ~/.config/
rm awesome fish kitty nvim picom lf btop -rf

# Symlink everything
ln -sf ~/.dotfiles/awesome/ ~/.config/
ln -sf ~/.dotfiles/fish/ ~/.config/
ln -sf ~/.dotfiles/kitty/ ~/.config/
ln -sf ~/.dotfiles/nvim/ ~/.config/
ln -sf ~/.dotfiles/picom/ ~/.config/
ln -sf ~/.dotfiles/lf/ ~/.config/
ln -sf ~/.dotfiles/btop/ ~/.config/
ln -sf ~/.dotfiles/starship/starship.toml ~/.config/
ln -sf ~/.dotfiles/zathura ~/.config/
ln -sf ~/.dotfiles/chrome/ ~/.librewolf/*-release/
